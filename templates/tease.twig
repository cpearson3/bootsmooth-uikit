{% block content %}
<div class="uk-card uk-card-default uk-card-hover">
	{% if post.get_thumbnail %}
    <div class="uk-card-media-top">
    	<a href="{{post.link}}">
    	    <div class="uk-inline-clip uk-transition-toggle  uk-light">
			<img class="responsive-img uk-transition-scale-up uk-transition-opaque" src="{{post.thumbnail.src}}" alt="{{post.thumbnail.alt}}" />
			</div>
		</a>
	</div>
    <div class="uk-card-body">
        <div class="uk-card-title"><a href="{{post.link}}">{{post.title}}</a></div>
        <p class="uk-article-meta">
        	{{ post.post_date|date('F j, Y') }} | {{ post.terms('category') | join(', ') }}
		</p>
    </div>
    {% else %}
    <div class="uk-card-body">
        <div class="uk-card-title"><a href="{{post.link}}">{{post.title}}</a></div>
        <p class="uk-article-meta">
        	{{ post.post_date|date('F j, Y') }} | {{ post.terms('category') | join(', ') }}
		</p>
        <p>{{post.post_content|excerpt(40)}}...</p>
    </div>
    {% endif %}
</div>
{% endblock %}
